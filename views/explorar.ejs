<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head') %>

<body class="">
  <%- include('./partials/background') %> 
  <%- include('./partials/header')  %>
  <main class="">

    <div class="w-75 mx-auto px-5 pb-5" style="background-color: rgba(0,0,0,.8);" id="content">

      <div class="input-group pt-5 mb-5 border-bottom border-2 pb-2">
        <div class="input-group-prepend ps-1 ps-md-2 ps-lg-3">
          <span class="input-group-text bg-transparent border-0 text-white fs-3" id="basic-addon1"><i class="bi bi-search"></i></span>
        </div>
        <input type="search" class="form-control bg-transparent border-0 text-white fs-3" placeholder="Search Animes" aria-label="Username" aria-describedby="basic-addon1">
      </div>

      <!-- Generos Grid -->
      <div class="mx-auto justify-content-center row row-cols-1 row-cols-sm-2 row-cols-md-auto row-cols-lg-8 my-5" id="generos">
        <a class="type-buttons btn btn-light m-1" href="/explorar">Todos</a>
        <% for( genero of generos ) { %>
          <a class="type-buttons btn btn-light m-1" href="/explorar/<%= genero.url %>"><%= genero.nome %></a>
        <% } %>
      </div>


      <!-- Anime Grid -->
      <div class="mx-auto justify-content-center row row-cols-1 row-cols-sm-2 row-cols-md-auto row-cols-lg-8 my-5" id="animes">
        <% if (animes.length === 0) { %>
          <h2 class="display-4 my-5">Desculpe, nenhum anime encontrado</h2>
        <% } else { %>
          <% for(anime of animes) { %> 
            <div class="col w-auto h-auto p-0 mx-1 mb-3" style="height: 350; max-width: 200px;">
                <a class="text-decoration-none" href="/anime/<%= anime.url %> ">
                    <img class="anime-card" src="../images/capas/<%= anime.url %>.jpg" alt="<%= anime.nomeIngles %> Capa" style="width: 200px; height: 295px; border-radius: 8px; margin: 3px;
                    transition: transform 0.98s; box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);">
                </a>
          </div>     
          <% } %>
        <% } %>
      </div>
    </div>   
  </main>

  <%- include('./partials/footer') %> 
  <%- include('./partials/scripts') %> 
</body>
</html>