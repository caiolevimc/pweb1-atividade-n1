<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head') %>

<body>
    <%- include('./partials/background') %> 
    <%- include('./partials/header')  %>

    <div class="w-50 my-5 mx-auto px-5 py-5" style="background-color: rgba(0,0,0,.8);" id="content">
        <% if (message) { %>
            <div class="alert <%= messageClass %>" role="alert">
                <%= message %>
            </div>
        <% } %>

        <h2 class="mb-4">Entrar</h2>

        <form class="d-flex flex-column" action="/login" method="POST">
            <div class="mb-3">
                <label for="emailInput" class="form-label">Email</label>
                <input name="email" type="email" class="form-control w-50" id="emailInput" aria-describedby="emailInput">
            </div>
            <div class="mb-3">
                <label for="passwordInput" class="form-label">Senha</label>
                <input name="password" type="password" class="form-control w-50" id="passwordInput">
            </div>
            <a class="sign-link" href="/register">NÃ£o possui cadastro? Cadastre-se</a>
            <button class="btn btn-secondary w-50 text-light my-3 py-2" type="submit" data-success-login="">Enviar</button>
        </form>
    </div>

    <%- include('./partials/scripts') %> 
</body>