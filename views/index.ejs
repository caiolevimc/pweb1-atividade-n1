                        <a href="/anime-list" class="morelink my-auto">VER TUDO <i class="fa-solid fa-angle-right"></i></a>
                    </div>
                    <div class="anime-list-slider my-3">
                        <% for (anime of animeList){ %>
                            <a class="text-decoration-none" href="/anime/<%= anime.url %> ">
                                <img class="anime-card" src="../images/capas/<%= anime.url %>.jpg" alt="<%= anime.nomeIngles %> Capa" style="width: 200px; height: 295px; border-radius: 8px; margin: 3px;
                                transition: transform 0.98s; box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);">
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>    
        <% } %>
