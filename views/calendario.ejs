<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head') %>

<body class="">
    <%- include('./partials/background') %>
    <%- include('./partials/header')  %>
    <main>
        <!-- <div class="overlay w-100 d-block position-absolute h-100 fit-cover" style=" z-index: -10 ; background: linear-gradient(180deg, rgba(33,37,41,1) 0%, rgba(33,37,41,0.21612394957983194) 47%, rgba(33,37,41,1) 100%);"></div> -->
    
        <div class="w-75 mx-auto px-5" style="background-color: rgba(0,0,0,.8);" id="content">

            <div class="input-group pt-5 mb-5 border-bottom border-2 pb-2">
                <div class="input-group-prepend ps-1 ps-md-2 ps-lg-3">
                <span class="input-group-text bg-transparent border-0 text-white fs-3" id="basic-addon1"><i class="bi bi-search"></i></span>
                </div>
                <input id="search" type="search" class="form-control bg-transparent border-0 text-white fs-3" placeholder="Search Animes" aria-label="Username" aria-describedby="basic-addon1" list="animes-list">
            </div>

            <!-- Dias Grid -->
            <div class="mx-auto justify-content-center row row-cols-2 row-cols-sm-2 row-cols-md-auto row-cols-lg-8 my-5" id="generos">
                <!-- <a class="type-buttons btn btn-light m-1" href="/calendario">Todos</a> -->
                <div class="form-check">
                    <input name="dia-filter" type="radio" class="btn-check dia-checkbox" id="todos" autocomplete="off" value="Todos" checked>
                    <label class="btn btn-outline-light" for="todos">Todos</label>
                <% for( dia of dias ) { %>
                    <!-- <a class="type-buttons btn btn-light m-1" href="/calendario/<%= dia.url %>"><%= dia.nome %></a> -->
                    <input name="dia-filter" type="radio" class="btn-check dia-checkbox" id="<%= dia.url %>" autocomplete="off" value="<%= dia.nome %>">
                    <label class="btn btn-outline-light" for="<%= dia.url %>"><%= dia.nome %> </label>
                <% } %>
                </div>
            </div>


            <!-- Anime Grid -->
            <div class="mx-auto justify-content-center row row-cols-1 row-cols-sm-2 row-cols-md-auto row-cols-lg-8 my-5" id="animes">
                <% if (animes.length === 0) { %>
                <h2 class="display-4 my-5">Desculpe, nenhum anime encontrado</h2>
                <% } else { %>
                <% for(anime of animes) { %> 
                    <div id="<%= anime._id.toString() %>" class="col w-auto h-auto p-0 mx-1 mb-3 anime-box" style="height: 350; max-width: 200px;" data-nome-ingles="<%= anime.nomeIngles %>" data-nome-japones="<%= anime.nomeJapones %>" data-dia="<%= anime.weekaired %>">
                        <a class="text-decoration-none" href="/anime/<%= anime.url %> ">
                            <img class="anime-card" src="../images/capas/<%= anime.url %>.jpg" alt="<%= anime.nomeIngles %> Capa" style="width: 200px; height: 295px; border-radius: 8px; margin: 3px;
                            transition: transform 0.98s; box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);">
                        </a>
                    </div>     
                <% } %>
                <% } %>
            </div>
        </div>   
    </main>

    <%- include('./partials/scripts') %> 

    <script src="../javascripts/calendario-search-engine.js"></script>
</body>
</html>